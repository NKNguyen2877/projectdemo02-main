@model IEnumerable<Project_Real__estate.Models.Category>

@{ Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<section class="section dashboard">
    <div class="row">

        <div class="col-lg-12">
            <div class="row">
                <div class="col-12">
                    <!-- css 807 217 -->
                    <div class="card recent-sales">
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoryName)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Edit")" class="btn btn-outline-primary" style="text-decoration:none">
                                <i class="fas fa-edit"></i>
                            </a>
                            &nbsp;&nbsp;
                            <a href="@Url.Action("Details", "Details")" class="btn btn-outline-primary" style="text-decoration:none">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            &nbsp;&nbsp;
                            <a href="@Url.Action("Delete", "Delete")" class="btn btn-outline-primary" style="text-decoration:none">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
}
                        </table>
                        <button type="button" class="btn btn-outline-dark" style="text-decoration:none">
                            @Html.ActionLink("Create New", "Create", null, new { style = "text-decoration:none;" })
                        </button>
                        <br />
                    </div>
                </div>

                <div class="col-12">
                    <!-- css 824 217 -->
                    <div class="card top-selling">

                    </div>
                </div>

            </div>
        </div>


    </div>
</section>

    
