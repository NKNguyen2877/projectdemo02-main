        <div class="col-lg-12">
            <div class="row">
                <div class="col-12">
                    <!-- css 807 217 -->
                    <div class="card recent-sales">
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PaymentName)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentName)
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-dark" style="text-decoration:none; font-size: 10px">
                            @Html.ActionLink("Edit", "Edit", new { id = item.PaymentId }, new { style = "text-decoration:none;" })
                        </button>
                        &nbsp;
                        <button type="button" class="btn btn-outline-dark" style="text-decoration:none; font-size: 10px">
                            @Html.ActionLink("Details", "Details", new { id = item.PaymentId }, new { style = "text-decoration:none;" })
                        </button>
                        &nbsp;
                        <button type="button" class="btn btn-outline-dark" style="text-decoration:none; font-size: 10px">
                            @Html.ActionLink("Delete", "Delete", new { id = item.PaymentId }, new { style = "text-decoration:none;" })
                        </button>
                    </td>
                </tr>}
                        </table>
                        <button type="button" class="btn btn-outline-dark" style="text-decoration:none">
                            @Html.ActionLink("Create New", "Create", null, new { style = "text-decoration:none;" })
                        </button>
                        <br />
                    </div>
                </div>

                <div class="col-12">
                    <!-- css 824 217 -->
                    <div class="card top-selling">

                    </div>
                </div>

            </div>
        </div>


    </div>
</section>

